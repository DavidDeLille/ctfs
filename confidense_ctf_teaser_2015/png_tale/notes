def reverse(s):
      if s == "":
            return ""
      return s[-1]+reverse(s[:-1])

b = ""
a = [b[8*i:8*i+8] for i in range(len(b)/8)]
c = [reverse(x) for x in a]
d = [int(x, 2) for x in c]
e = [chr(x) for x in d]
f = ''.join(e)

